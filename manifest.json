{
  "manifest_version": 2,

  "name": "Rose-colored Glasses",
  "description": "A Chrome extension for viewing websites in the palette of your choice.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "temp-icon.png",
    "default_title": "Rose-colored glasses"
  },

  "background": {
    "scripts": ["state.js"],
    "persistent": false
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["color-it.js"]
  }],

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}